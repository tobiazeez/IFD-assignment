{
    "parser": "@babel/eslint-parser",
    "env": {
        "browser": true,
        "es2021": true
    },
    "ignorePatterns": ["public/app.js"],
    "plugins": ["import", "react"],
    "extends": [
        "eslint:recommended",
        "google",
        "plugin:import/recommended",
        "plugin:react/recommended",
        "plugin:react/jsx runtime",
        "plugin:testing-library/react"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module",
        "ecmaFeatures": {
        "jsx": true
        }
    },
    "rules": {
    "quotes":"off",
    "no-trailing-spaces":"off",
    "max-len": ["error", 120],
    "require-jsdoc": "off",
    "comma-dangle": "off",
    "comma-spacing":"off",
    "semi":"warn",
    "eol-last":"off",
    "indent":"warn",
    "no-console": 2,
    "react/react-in-jsx-scope": "off"
    },
    "settings": {
        "react": {
          "version": "detect"
        }

    }
 }   
